@page "/counter"
@using System

<ErrorBoundary>
    <ChildContent>
        <h3>Counter</h3>
        <p>Current count: @currentCount</p>
        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
    </ChildContent>
    <ErrorContent>
        <p style="color:red;">Something went wrong while updating the count.</p>
    </ErrorContent>
</ErrorBoundary>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        if(currentCount >5)
        {
            throw new InvalidOperationException("Counter error!");
        }
    }
}
